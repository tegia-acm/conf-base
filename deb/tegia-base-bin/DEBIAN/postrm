#!/bin/bash

set -e
. /usr/share/debconf/confmodule

RED=`tput setaf 1`
GREEN=`tput setaf 2`
RESET=`tput sgr0`

#echo "${RED}postrm $1${RESET}"


case "$1" in
#================================================================================
remove)
#================================================================================
    echo "${GREEN}tegia-base-bin remove saccessful${RESET}"
;;
#================================================================================
purge)
#================================================================================
    echo "${GREEN}tegia-base-bin purge saccessful${RESET}"
;;
#================================================================================
upgrade)
#================================================================================

    

;;
#================================================================================
abort-upgrade|abort-remove|abort-deconfigure)
#================================================================================


;;
#================================================================================
*)
#================================================================================
    echo "postrm called with unknown argument \`$1'" >&2
    exit 0
;;
esac


exit 0









